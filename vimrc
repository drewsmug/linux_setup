"search
set hlsearch
set ignorecase
set smartcase

"indentation
set tabstop=8
set shiftwidth=8
set noexpandtab

set smartindent
set autoindent

"Colors
hi diffadd ctermfg=green guifg=green

"Counts default to decimal and not octal
set nrformats=

"hi diffadded ctermfg=darkgreen
"hi diffremoved ctermfg=darkred
"hi difffile ctermfg=white cterm=bold
"hi diffoldfile ctermfg=white cterm=bold
"hi diffnewfile ctermfg=white cterm=bold
"hi diffline ctermfg=blue
"hi diffsubname ctermfg=white

hi diffadded ctermfg=darkgreen
hi diffremoved ctermfg=darkred
hi difffile ctermfg=white cterm=bold
hi diffoldfile ctermfg=white cterm=bold
hi diffnewfile ctermfg=white cterm=bold
hi diffline ctermfg=blue
hi diffsubname ctermfg=white

set modeline
